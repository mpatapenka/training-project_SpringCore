<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       default-lazy-init="true"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
 		                   http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">

    <import resource="repository-context.xml"/>


    <bean id="userService" class="by.epam.maksim.movietheater.service.impl.UserServiceImpl">
        <constructor-arg ref="userRepository"/>
    </bean>


    <bean id="eventService" class="by.epam.maksim.movietheater.service.impl.EventServiceImpl">
        <constructor-arg ref="eventRepository"/>
    </bean>


    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:spring/properties/auditoriums/auditoriums.properties</value>
                <value>classpath:spring/properties/auditoriums/MediumHall.properties</value>
            </list>
        </property>
    </bean>

    <bean id="auditorium1" class="by.epam.maksim.movietheater.domain.Auditorium">
        <constructor-arg value="${auditorium1.name}"/>
        <constructor-arg value="${auditorium1.seatscount}"/>
        <constructor-arg value="${auditorium1.vipseats}"/>
    </bean>

    <bean id="auditorium2" class="by.epam.maksim.movietheater.domain.Auditorium">
        <constructor-arg value="${auditorium2.name}"/>
        <constructor-arg value="${auditorium2.seatscount}"/>
        <constructor-arg value="${auditorium2.vipseats}"/>
    </bean>

    <bean id="auditorium3" class="by.epam.maksim.movietheater.domain.Auditorium">
        <constructor-arg value="${mediumhall.name}"/>
        <constructor-arg value="${mediumhall.seatscount}"/>
        <constructor-arg value="${mediumhall.vipseats}"/>
    </bean>

    <bean id="auditoriumService" class="by.epam.maksim.movietheater.service.impl.AuditoriumServiceImpl">
        <constructor-arg>
            <map>
                <entry key="auditorium1.name" value-ref="auditorium1"/>
                <entry key="auditorium2.name" value-ref="auditorium2"/>
                <entry key="auditorium3.name" value-ref="auditorium3"/>
            </map>
        </constructor-arg>
    </bean>


    <bean id="bookingService" class="by.epam.maksim.movietheater.service.impl.BookingServiceImpl">
        <constructor-arg ref="ticketRepository"/>
        <constructor-arg ref="discountService"/>
        <constructor-arg ref="userService"/>
        <constructor-arg index="3" value="1.2"/>
        <constructor-arg index="4" value="2"/>
    </bean>


    <import resource="discount-context.xml"/>

</beans>