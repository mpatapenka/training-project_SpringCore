<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       default-lazy-init="true"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
 		                   http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">

    <bean id="birthdayDiscountStrategy" class="by.epam.maksim.movietheater.service.strategy.discount.BirthdayDiscountStrategyImpl">
        <constructor-arg type="long" value="2"/>
        <constructor-arg type="byte" value="5"/>
    </bean>

    <bean id="tenthTicketDiscountStrategy" class="by.epam.maksim.movietheater.service.strategy.discount.TenthTicketDiscountStrategyImpl">
        <constructor-arg value="50"/>
    </bean>

    <bean id="discountService" class="by.epam.maksim.movietheater.service.impl.DiscountServiceImpl">
        <constructor-arg>
            <list>
                <ref bean="birthdayDiscountStrategy"/>
                <ref bean="tenthTicketDiscountStrategy"/>
            </list>
        </constructor-arg>
    </bean>

</beans>